<%- include('../partials/header.ejs') %>
<%- include('../partials/navbar.ejs') %>
<link rel="stylesheet" href="home.css">

<body>
<main>
    <div id="banner-container">
        <div style="background-image: url('/images/home-banner.png')" id="banner">
            <div class="banner-button-container">
                <a href="#shop" class="banner-button">SHOP NOW</a>
            </div>
        </div>
        <div class="divider-bar"></div>
    </div>

    <div id="home-container">
        <!-- Best-selling items section -->
        <div class="product-header">
            <p>RECENT BEST SELLERS</p>
        </div>
        <div id="best-sellers">
            <% bestSellers.forEach(item => { %>
                <div class="best-sellers-card">
                    <div class="image-container">
                        <img src="<%= item.image %>" alt="<%= item.name %>">
                    </div>
                    <p class="product-name"><%= item.name %></p>
                    <p class="product-description"><%= item.description %></p>
                    <p class="product-price">â‚± <%= item.price.toFixed(2) %></p>
                </div>
            <% }); %>
        </div>

        <div class="button-container">
            <a href="#view-all" class="best-sellers-button">View All Products</a>
        </div>

        <div class="divider-line"></div>

        <!-- Browse by category -->
        <div id="browse">
            <div class="category-header">
                <p>BROWSE BY CATEGORY</p>
            </div>
            <div class="grid-container">
                <div class="grid-card category-food">
                    <p>Food</p>
                    <img src="/images/food.png" alt="Food">
                </div>
                <div class="grid-card category-items">
                    <p>Items</p>
                    <img src="/images/items.png" alt="Items">
                </div>
                <div class="grid-card category-services">
                    <p>Services</p>
                    <img src="/images/services.png" alt="Services">
                </div>
            </div>
        </div>

        <!-- Booths -->
        <div id="discover">
            <div class="discover-card">
                <div class="discover-text">
                    <p>DISCOVER NEW FINDS, CHECK OUT THE BOOTHS!</p>
                </div>
                <div class="logos">
                    <div class="logos-slide">
                        <img src="/images/org/comelec.jpg" alt="Booth">
                    </div>
                    <div class="logos-slide">
                        <img src="/images/org/rpg.jpg" alt="Booth">
                    </div>
                    <div class="logos-slide">
                        <img src="/images/org/w&b.jpg" alt="Booth">
                    </div>
                    <div class="logos-slide">
                        <img src="/images/org/schema.jpg" alt="Booth">
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
</body>
<%- include('../partials/footer.ejs') %>
